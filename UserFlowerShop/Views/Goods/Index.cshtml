@model IEnumerable<UserFlowerShop.Models.Goods>

@{
    ViewBag.Title = "Index";
}

<div class="goods">
    <div class="contain">
        <div class="row">
            @foreach (var item in Model)
            { 
            <div class="col-4">
                <a href='@Url.Action("Details", new { id=item.ID })' class="item-hover"><img src="~/img/@Html.DisplayFor(modelItem => item.Image)" alt="тут картинка" /></a>
                <p>@Html.DisplayFor(modelItem => item.Name)</p>
                <p>@Html.DisplayFor(modelItem => item.Price) руб</p>
                <p>
                    @if (item.Availability == true)
                    {
                    <span> В наличии</span>
                    }
                    else
                    {
                    <span>Не наличии</span>
                    }
                </p>
            </div>
            }
        </div>
    </div>
</div>

